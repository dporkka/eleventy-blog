{% set postListHeadingLevel = 'h3' if postListHeading else 'h2' %}

{% if postListItems.length %}
  <section class="l-container">
    <div class="l-stack">
      <div class="post-grid">
      <div class="post-section">
      {% if postListHeading %}
       <h2 class="latest-posts">{{ postListHeading }} <a class="see-posts" href="/posts/">View All</a></h2>
       {# <a href="/posts/"><button class="see-posts">See All Posts</button></a> #}
      {% endif %}
      
  
      <ul class="l-post-stack" reversed>
        {% for item in postListItems %}
          <li class="post-stack-item">
            <{{postListHeadingLevel}} class="h4">
              <a href="{{ item.url }}" rel="bookmark">{{ item.data.title }}</a>
            </{{postListHeadingLevel}}>
            <p>
              <time class="post-stack-date" datetime="{{ item.date | w3DateFilter }}">{{ item.date | dateFilter }}</time>
            </p>
            {% if item.data.description %}
              <p>{{item.data.description}}</p>
            {% endif %}
          </li>
        {% endfor %}
      </ul>
         <br>
    </div>

    <div class="topics-section">
      <h2 class="topics-h2 h2-header"><strong>Topics</strong><h2>
